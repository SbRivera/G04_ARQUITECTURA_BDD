<Window x:Class="ec.edu.monster.views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EurekaBank | Operaciones" Width="1200" Height="680"
        WindowStartupLocation="CenterScreen" Background="#0C356D">
    <Window.Resources>
        <!-- Mismo estilo watermark para esta ventana -->
        <Style x:Key="WatermarkTextBox" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <ScrollViewer x:Name="PART_ContentHost" />
                            <TextBlock x:Name="Watermark"
                                       Text="{TemplateBinding Tag}"
                                       Foreground="Gray"
                                       Margin="6,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="Text" Value="{x:Null}">
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header -->
        <DockPanel LastChildFill="False" Background="White" Height="52" VerticalAlignment="Top">
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <Image Source="/ec.edu.monster.assets/img/logo-ldu.png" Height="24" Stretch="Uniform"/>
            </StackPanel>
            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,14,0" >
                <Button x:Name="BtnUser" Content="USER" Margin="0,0,8,0" Padding="20,4"
                        Background="#1E5CCB" Foreground="White" BorderThickness="0"
                        Cursor="Hand" />
                <Button x:Name="BtnLogout" Content="Cerrar Sesión" Padding="16,4"
                        Style="{StaticResource PrimaryButton}" />
            </StackPanel>
            <Border DockPanel.Dock="Bottom" Height="2" Background="#D3252B"/>
        </DockPanel>

        <!-- circles -->
        <Ellipse Width="300" Height="300" Fill="#233C7A" Opacity=".25"
                 HorizontalAlignment="Left" Margin="60,130,0,0" VerticalAlignment="Top"/>
        <Ellipse Width="240" Height="240" Fill="#233C7A" Opacity=".25"
                 HorizontalAlignment="Right" Margin="0,130,80,0" VerticalAlignment="Top"/>

        <!-- Cards grid -->
        <UniformGrid Rows="1" Columns="4" Margin="20,80,20,20">
            <!-- Consultar -->
            <Border CornerRadius="14" Background="#14335E" Opacity=".0"/>
            <!-- spacer for effect -->

            <Border CornerRadius="14" Margin="10" Background="Transparent">
                <DockPanel>
                    <Grid Height="260">
                        <Border CornerRadius="14" Margin="0,0,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#C00000" Offset="0"/>
                                    <GradientStop Color="#143C76" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <!-- ícono simple -->
                                <Viewbox Width="80" Height="80">
                                    <Canvas Width="80" Height="80">
                                        <Rectangle Width="14" Height="36" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="10" Canvas.Top="22"/>
                                        <Rectangle Width="14" Height="54" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="33" Canvas.Top="4"/>
                                        <Rectangle Width="14" Height="44" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="56" Canvas.Top="14"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Consultar Movimientos" Foreground="White" FontWeight="SemiBold"
                                           Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border DockPanel.Dock="Bottom" Background="#F8F8F8" CornerRadius="14" Margin="0,8,0,0" Padding="16">
                        <StackPanel>
                            <TextBox x:Name="TxtMovCuenta" Height="34" Padding="10"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Número de cuenta"/>
                            <Button x:Name="BtnMov" Margin="0,12,0,0" Content="VER MOVIMIENTOS" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Depósito -->
            <Border CornerRadius="14" Margin="10" Background="Transparent">
                <DockPanel>
                    <Grid Height="260">
                        <Border CornerRadius="14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#C00000" Offset="0"/>
                                    <GradientStop Color="#143C76" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Viewbox Width="80" Height="80">
                                    <Canvas Width="80" Height="80">
                                        <Rectangle Width="70" Height="42" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="5" Canvas.Top="20"/>
                                        <Line X1="40" X2="40" Y1="26" Y2="56" Stroke="White" StrokeThickness="4"/>
                                        <Path Stroke="White" StrokeThickness="4" Data="M30,38 C30,32 50,32 50,38 S30,44 30,38"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Depósito" Foreground="White" FontWeight="SemiBold"
                                           Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border DockPanel.Dock="Bottom" Background="#F8F8F8" CornerRadius="14" Margin="0,8,0,0" Padding="16">
                        <StackPanel>
                            <TextBox x:Name="TxtDepCuenta" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Cuenta"/>
                            <TextBox x:Name="TxtDepImporte" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnDep" Margin="0,12,0,0" Content="DEPOSITAR" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Retiro -->
            <Border CornerRadius="14" Margin="10" Background="Transparent">
                <DockPanel>
                    <Grid Height="260">
                        <Border CornerRadius="14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#C00000" Offset="0"/>
                                    <GradientStop Color="#143C76" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Viewbox Width="80" Height="80">
                                    <Canvas Width="80" Height="80">
                                        <Rectangle Width="70" Height="42" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="5" Canvas.Top="20"/>
                                        <Rectangle Width="28" Height="18" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="44" Canvas.Top="32"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Retiro" Foreground="White" FontWeight="SemiBold"
                                           Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border DockPanel.Dock="Bottom" Background="#F8F8F8" CornerRadius="14" Margin="0,8,0,0" Padding="16">
                        <StackPanel>
                            <TextBox x:Name="TxtRetCuenta" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Cuenta"/>
                            <TextBox x:Name="TxtRetImporte" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnRet" Margin="0,12,0,0" Content="RETIRAR" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>

            <!-- Transferencia -->
            <Border CornerRadius="14" Margin="10" Background="Transparent">
                <DockPanel>
                    <Grid Height="260">
                        <Border CornerRadius="14">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#C00000" Offset="0"/>
                                    <GradientStop Color="#143C76" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Grid>
                                <Viewbox Width="80" Height="80">
                                    <Canvas Width="80" Height="80">
                                        <Rectangle Width="70" Height="42" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="5" Canvas.Top="20"/>
                                        <Line X1="15" X2="55" Y1="34" Y2="34" Stroke="White" StrokeThickness="4"/>
                                        <Line X1="25" X2="55" Y1="44" Y2="44" Stroke="White" StrokeThickness="4"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="Transferencia" Foreground="White" FontWeight="SemiBold"
                                           Margin="0,0,0,10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border DockPanel.Dock="Bottom" Background="#F8F8F8" CornerRadius="14" Margin="0,8,0,0" Padding="16">
                        <StackPanel>
                            <TextBox x:Name="TxtTrfOrigen" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Cuenta origen"/>
                            <TextBox x:Name="TxtTrfDestino" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Cuenta destino"/>
                            <TextBox x:Name="TxtTrfImporte" Height="34" Padding="10" Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnTrf" Margin="0,12,0,0" Content="TRANSFERIR" Style="{StaticResource PrimaryButton}"/>
                        </StackPanel>
                    </Border>
                </DockPanel>
            </Border>

        </UniformGrid>
    </Grid>
</Window>
