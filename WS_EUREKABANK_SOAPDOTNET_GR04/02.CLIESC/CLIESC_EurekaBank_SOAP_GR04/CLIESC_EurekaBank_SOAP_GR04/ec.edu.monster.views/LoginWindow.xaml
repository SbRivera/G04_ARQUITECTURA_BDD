<Window x:Class="ec.edu.monster.views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EurekaBank | Ingreso" Width="920" Height="560"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0C356D">
    <Grid>
        <!-- Top bar white -->
        <Border Background="White" Height="52" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" Margin="16,0" VerticalAlignment="Center">
                    <Image Source="/ec.edu.monster.assets/img/logo-ldu.png" Height="26" Stretch="Uniform"/>
                </StackPanel>
                <Border Height="2" Background="#D3252B" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <!-- subtle circles -->
        <Ellipse Width="280" Height="280" Fill="#233C7A" Opacity=".25"
                 HorizontalAlignment="Left" Margin="80,120,0,0" VerticalAlignment="Top"/>
        <Ellipse Width="220" Height="220" Fill="#233C7A" Opacity=".25"
                 HorizontalAlignment="Right" Margin="0,120,80,0" VerticalAlignment="Top"/>

        <!-- Card -->
        <Border CornerRadius="16" Background="White" Padding="28"
                Width="430" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <!-- avatar -->
                <Grid Margin="0,0,0,12" HorizontalAlignment="Center">
                    <Ellipse Width="86" Height="86" Fill="#D3252B"/>
                    <Viewbox Width="46" Height="46" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Grid>
                            <Ellipse Width="20" Height="20" Fill="White" Margin="0,16,0,0" />
                            <Ellipse Width="18" Height="18" Fill="White" Margin="0,0,0,22"/>
                        </Grid>
                    </Viewbox>
                </Grid>

                <TextBlock Text="Ingreso al sistema" Foreground="#C00000"
                           FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" />

                <!-- Aplicado style watermark y Tag con el texto del placeholder -->
                <TextBox x:Name="TxtUser" Margin="0,18,0,8" Height="36"
                         Padding="12,6" BorderBrush="#65A0FF" BorderThickness="2"
                         Style="{StaticResource WatermarkTextBox}" Tag="Usuario" />
                <PasswordBox x:Name="TxtPass" Margin="0,0,0,12" Height="36" Padding="12,6"/>

                <Button x:Name="BtnLogin" Content="INGRESAR" Style="{StaticResource PrimaryButton}" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
