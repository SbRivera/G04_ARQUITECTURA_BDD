<Window x:Class="ec.edu.monster.views.MovimientosDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Movimientos de Cuenta" Width="860" Height="580"
        WindowStartupLocation="CenterOwner" Background="#F6F6F6"
        ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="18">
        <Border CornerRadius="18" Background="White" Padding="20" >
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,14">
                    <Image Source="/Assets/img/logo-ldu.png" Height="26" HorizontalAlignment="Left" />
                    <TextBlock Text="Movimientos de Cuenta" FontSize="20" FontWeight="Bold"
                               Foreground="#C00000" Margin="0,10,0,6"/>
                    <Border CornerRadius="18" Padding="8,4" HorizontalAlignment="Left"
                            Width="160">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#C00000" Offset="0"/>
                                <GradientStop Color="#143C76" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <TextBlock x:Name="LblCuenta" Text="00000000" Foreground="White"
                                   HorizontalAlignment="Center" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <DataGrid x:Name="GridMovs" AutoGenerateColumns="False" CanUserAddRows="False"
                          HeadersVisibility="Column" RowHeight="40" IsReadOnly="True"
                          GridLinesVisibility="None" >
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Height" Value="38"/>
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#C00000" Offset="0"/>
                                        <GradientStop Color="#143C76" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="NRO" Binding="{Binding NroMov}" Width="60"/>
                        <DataGridTextColumn Header="FECHA" Binding="{Binding Fecha, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="*"/>
                        <DataGridTemplateColumn Header="TIPO" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="14" Padding="10,4" Background="#28A745">
                                        <TextBlock Text="{Binding Tipo}" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="ACCIÓN" Binding="{Binding Accion}" Width="130"/>
                        <DataGridTextColumn Header="IMPORTE" Binding="{Binding Importe, StringFormat=\{0:C2\}}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>
    </Grid>
</Window>
