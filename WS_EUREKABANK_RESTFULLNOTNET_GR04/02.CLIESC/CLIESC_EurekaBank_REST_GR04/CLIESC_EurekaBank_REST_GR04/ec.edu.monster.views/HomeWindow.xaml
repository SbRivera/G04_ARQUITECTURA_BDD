<Window x:Class="ec.edu.monster.views.HomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EurekaBank | Operaciones" Width="1240" Height="720"
        WindowStartupLocation="CenterScreen" Background="#0B3A72">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="74"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" Grid.Row="0">
            <DockPanel LastChildFill="False" Margin="12,0">
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/ec.edu.monster.assets/img/logo-ldu.png" Height="32" Margin="4,0"/>
                    <StackPanel Margin="10,0">
                        <TextBlock Text="EurekaBank" Foreground="#C00000" FontWeight="Bold" FontSize="18"/>
                        <TextBlock Text="Tu banco, tu equipo." Foreground="#777" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,6,0">
                    <Button x:Name="BtnUser" Content="USER" Margin="0,0,8,0" Padding="18,6"
                            Background="#F4F6FA" Foreground="#0B3A72" BorderBrush="#CBD3E1"
                            BorderThickness="1" Cursor="Hand"/>
                    <Button x:Name="BtnLogout" Content="Cerrar Sesión" Padding="18,6"
                            Style="{StaticResource PrimaryButton}" />
                </StackPanel>
            </DockPanel>
        </Border>
        <Border Grid.Row="0" Height="3" Background="#D3252B" VerticalAlignment="Bottom"/>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,8,0,0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0B3A72" Offset="0"/>
                    <GradientStop Color="#06244B" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Ellipse Width="360" Height="360" Fill="#1D4D92" Opacity=".22" HorizontalAlignment="Left" Margin="60,40,0,0"/>
            <Ellipse Width="320" Height="320" Fill="#1D4D92" Opacity=".20" HorizontalAlignment="Right" Margin="0,60,80,0"/>

            <UniformGrid Rows="1" Columns="4" Margin="18,24,18,18" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <!-- Consultar -->
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#C00000" Offset="0"/>
                                <GradientStop Color="#1A3D78" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="70" Height="70" Margin="0,0,0,12">
                                <Canvas Width="70" Height="70">
                                    <Rectangle Width="12" Height="34" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="10" Canvas.Top="20"/>
                                    <Rectangle Width="12" Height="52" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="32" Canvas.Top="6"/>
                                    <Rectangle Width="12" Height="42" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="54" Canvas.Top="14"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Consultar Movimientos" Foreground="White" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Background="#EEF2F7" CornerRadius="10" Padding="14" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBox x:Name="TxtMovCuenta" Height="32" Margin="0,0,0,10" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Número de cuenta"/>
                            <Button x:Name="BtnMov" Content="VER MOVIMIENTOS" Style="{StaticResource PrimaryButton}" Height="36"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Deposito -->
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#C00000" Offset="0"/>
                                <GradientStop Color="#1A3D78" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="70" Height="70" Margin="0,0,0,12">
                                <Canvas Width="70" Height="70">
                                    <Rectangle Width="56" Height="34" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="7" Canvas.Top="18"/>
                                    <Line X1="35" X2="35" Y1="12" Y2="58" Stroke="White" StrokeThickness="4"/>
                                    <Line X1="18" X2="52" Y1="36" Y2="36" Stroke="White" StrokeThickness="4"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Depósito" Foreground="White" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Background="#EEF2F7" CornerRadius="10" Padding="14" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBox x:Name="TxtDepCuenta" Height="32" Margin="0,0,0,8" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Cuenta"/>
                            <TextBox x:Name="TxtDepImporte" Height="32" Margin="0,0,0,12" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnDep" Content="DEPOSITAR" Style="{StaticResource PrimaryButton}" Height="36"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Retiro -->
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#C00000" Offset="0"/>
                                <GradientStop Color="#1A3D78" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="70" Height="70" Margin="0,0,0,12">
                                <Canvas Width="70" Height="70">
                                    <Rectangle Width="56" Height="34" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="7" Canvas.Top="18"/>
                                    <Rectangle Width="26" Height="16" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="38" Canvas.Top="30"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Retiro" Foreground="White" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Background="#EEF2F7" CornerRadius="10" Padding="14" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBox x:Name="TxtRetCuenta" Height="32" Margin="0,0,0,8" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Cuenta"/>
                            <TextBox x:Name="TxtRetImporte" Height="32" Margin="0,0,0,12" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnRet" Content="RETIRAR" Style="{StaticResource PrimaryButton}" Height="36"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Transferencia -->
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="260"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Border CornerRadius="12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#C00000" Offset="0"/>
                                <GradientStop Color="#1A3D78" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Viewbox Width="70" Height="70" Margin="0,0,0,12">
                                <Canvas Width="70" Height="70">
                                    <Rectangle Width="56" Height="34" RadiusX="10" RadiusY="10" Stroke="White" StrokeThickness="4" Canvas.Left="7" Canvas.Top="18"/>
                                    <Rectangle Width="22" Height="14" RadiusX="6" RadiusY="6" Stroke="White" StrokeThickness="4" Canvas.Left="40" Canvas.Top="30"/>
                                    <Line X1="20" X2="46" Y1="30" Y2="30" Stroke="White" StrokeThickness="4"/>
                                    <Line X1="20" X2="46" Y1="40" Y2="40" Stroke="White" StrokeThickness="4"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="Transferencia" Foreground="White" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Grid.Row="1" Background="#EEF2F7" CornerRadius="10" Padding="14" Margin="0,10,0,0">
                        <StackPanel>
                            <TextBox x:Name="TxtTrfOrigen" Height="32" Margin="0,0,0,8" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Cuenta origen"/>
                            <TextBox x:Name="TxtTrfDestino" Height="32" Margin="0,0,0,8" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Cuenta destino"/>
                            <TextBox x:Name="TxtTrfImporte" Height="32" Margin="0,0,0,12" Padding="10"
                                     Background="White" BorderBrush="#C6D0DE" BorderThickness="1"
                                     Style="{StaticResource WatermarkTextBox}" Tag="Importe"/>
                            <Button x:Name="BtnTrf" Content="TRANSFERIR" Style="{StaticResource PrimaryButton}" Height="36"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
